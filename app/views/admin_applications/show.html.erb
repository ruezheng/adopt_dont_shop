
<h1> <%= @application.name %> </h1>

<h3>Pets Applied for </h3>
<% @application.pets.each do |pet| %>
  <div id="<%= pet.id %>">
    <%= pet.name %>
    <%= button_to 'Approve', "/admin/applications/#{@application.id}", method: :patch, params: { approved: true, pet_id: pet.id } %>
    <%# <%= button_to 'Approve', "/admin/applications/#{@pet_application.application.id}", method: :patch, params: { approved: true } %> %>
  </div>
<% end %>
