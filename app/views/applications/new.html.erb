
<h2>Start an Application</h2>
<%= form_with url: "/applications", method: :post, local: true do |form|%>
  <%= form.label :name %><br/>
  <%= form.text_field :name %><br/>
  <%= form.label :street_address, "Street Address" %><br/>
  <%= form.text_field :street_address %><br/>
  <%= form.label :city, "City" %><br/>
  <%= form.text_field :city %><br/>
  <%= form.label :state, "State" %><br/>
  <%= form.text_field :state %><br/>
  <%= form.label :zip_code, "Zip Code" %><br/>
  <%= form.text_field :zip_code %><br/>
  <%= form.label :description, "Why would you make a good home?" %><br/>
  <%= form.text_field :description %><br/>
  <%= form.submit 'Submit' %>
<% end %>
